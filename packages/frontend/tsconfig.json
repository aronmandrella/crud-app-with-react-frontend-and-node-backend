{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],
      "@theme": ["./src/theme"],
      "@theme/*": ["./src/theme/*"],
      "@ui": ["./src/ui"],
      "@ui/*": ["./src/ui/*"],
      "@helpers": ["./src/helpers"],
      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./jest.setup.ts"],
  "exclude": ["node_modules"]
}
